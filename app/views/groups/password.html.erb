<div class="create-group-form">
	<%= form_for group, url: authenticate_path(group), data:{slug:@group.slug} do |f| %>

	  <div class="cgf-header"><%= group.title %></div>

	  <div class="cgf-input-container">
	    <label>Password</label> <%= f.text_field :password, placeholder: "Enter Password", :autocomplete => :off, class: "form-control" %>
	  </div>


	  <div class="cgf-input-container">
	    <%= f.submit "Enter Room", id: "enter-password", class: "btn group-btn" %>
	  </div>

	<% end %>
</div>
